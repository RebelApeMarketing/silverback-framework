---
import Button from './Button.astro';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "How Do I Know You're The Right Choice?",
  subtext = "We understand choosing the right partner is important. Here's what sets us apart."
} = Astro.props;

const reasons = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`,
    title: "Licensed & Insured",
    description: "Fully licensed, bonded, and insured for your complete peace of mind."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    title: "Fast Response Time",
    description: "We respond to all inquiries within 15 minutes during business hours."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`,
    title: "Expert Team",
    description: "Highly trained professionals with years of industry experience."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    title: "Satisfaction Guarantee",
    description: "We stand behind our work with a 100% satisfaction guarantee."
  }
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Column -->
      <div>
        <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
        <p class="text-lg text-gray-600 mb-8">{subtext}</p>

        <div class="space-y-6">
          {reasons.map((reason) => (
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-12 h-12 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                <Fragment set:html={reason.icon} />
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">{reason.title}</h3>
                <p class="text-gray-600">{reason.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column -->
      <div class="relative">
        <img
          src="https://placehold.co/600x700/e2e8f0/64748b?text=Professional+Team"
          alt="Our professional team"
          class="rounded-lg shadow-2xl w-full"
        />
        <div class="mt-6 text-center">
          <Button href="#schedule" variant="primary" size="lg">
            Schedule Your Service
          </Button>
        </div>
      </div>
    </div>
  </div>
</section>
