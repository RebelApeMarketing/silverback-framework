---
import { site } from '../config/site';
---

<header class="fixed top-0 left-0 right-0 z-50 bg-white shadow-sm">
  <div class="max-w-6xl mx-auto px-6 py-3 flex flex-col md:flex-row items-center justify-between gap-3 md:gap-0">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2">
      <img src="https://placehold.co/200x80/e2e8f0/1e293b?text=Your+Logo" alt={`${site.companyName} Logo`} class="h-20 md:h-14 w-auto" />
    </a>

    <!-- Right Side: Google Reviews + Call Button -->
    <div class="flex flex-col md:flex-row items-center gap-3 md:gap-6 w-full md:w-auto">
      <!-- Google Reviews Badge -->
      <a href="#reviews" class="flex items-center gap-3 px-4 py-2 bg-slate-50 rounded-lg border border-slate-200 hover:bg-slate-100 transition cursor-pointer">
        <!-- Google Logo -->
        <div class="flex items-center gap-1">
          <span class="text-lg md:text-xl font-bold">
            <span style="color: #4285F4">G</span><span style="color: #EA4335">o</span><span style="color: #FBBC04">o</span><span style="color: #4285F4">g</span><span style="color: #34A853">l</span><span style="color: #EA4335">e</span>
          </span>
        </div>
        <!-- Rating -->
        <div class="flex flex-col items-center gap-0.5">
          <div class="flex gap-0.5">
            <span class="text-yellow-400 text-sm">★</span>
            <span class="text-yellow-400 text-sm">★</span>
            <span class="text-yellow-400 text-sm">★</span>
            <span class="text-yellow-400 text-sm">★</span>
            <span class="text-yellow-400 text-sm">★</span>
          </div>
          <span class="text-xs text-slate-600 font-semibold">4.9★</span>
        </div>
      </a>

      <!-- Call Now Button -->
      <a
        href={site.phoneHref}
        class="rounded-lg bg-green-600 text-white px-6 md:px-7 py-3 md:py-3.5 font-semibold hover:bg-green-700 transition duration-200 flex items-center gap-2 shadow-lg hover:shadow-2xl drop-shadow-lg whitespace-nowrap text-sm md:text-base w-full md:w-auto justify-center"
      >
        <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
          <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" />
        </svg>
        Call Now! {site.phone}
      </a>
    </div>
  </div>
</header>

<!-- Spacer to account for fixed header -->
<div class="h-36 md:h-20"></div>