---
import Button from './Button.astro';
import { site } from '../config/site';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "Frequently Asked Questions",
  subtext = "Have questions? We have answers."
} = Astro.props;

const faqs = [
  {
    question: "What services do you offer?",
    answer: "We provide a comprehensive range of professional services tailored to meet your needs. Contact us for a free consultation to discuss your specific requirements."
  },
  {
    question: "How quickly can you start my project?",
    answer: "We understand time is important. In many cases, we can schedule service within 24-48 hours. For urgent needs, we offer same-day or next-day availability."
  },
  {
    question: "Do you offer free estimates?",
    answer: "Yes! We provide free, no-obligation estimates for all our services. Contact us to schedule your free consultation today."
  },
  {
    question: "Are you licensed and insured?",
    answer: "Absolutely. We are fully licensed, bonded, and insured for your complete peace of mind and protection."
  },
  {
    question: "What areas do you serve?",
    answer: "We proudly serve the surrounding area and beyond. Contact us to confirm we service your location - we may be able to help even if you're outside our typical service area."
  },
  {
    question: "Do you offer warranties?",
    answer: "Yes, all our work is backed by our comprehensive warranty. We stand behind our workmanship and the quality of materials we use."
  }
];
---

<section class="py-16 md:py-24">
  <div class="max-w-4xl mx-auto px-6">
    <!-- Section Header -->
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">
        {headline}
      </h2>
      <p class="text-lg md:text-xl text-gray-600">
        {subtext}
      </p>
    </div>

    <!-- FAQ Items -->
    <div class="space-y-6">
      {faqs.map((faq) => (
        <details class="group border-2 border-gray-200 rounded-lg p-6 cursor-pointer hover:border-blue-600 transition">
          <summary class="flex items-center justify-between font-semibold text-gray-900 text-lg">
            <span>{faq.question}</span>
            <svg class="w-6 h-6 text-gray-600 group-open:rotate-180 transition" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3" />
            </svg>
          </summary>
          <p class="text-gray-600 mt-4 leading-relaxed">
            {faq.answer}
          </p>
        </details>
      ))}
    </div>

    <!-- Still Have Questions CTA -->
    <div class="mt-12 text-center">
      <p class="text-gray-600 mb-6 text-lg">Still have questions? We're here to help!</p>
      <Button href={site.phoneHref} variant="primary" size="lg">
        Contact Us Today
      </Button>
    </div>
  </div>
</section>