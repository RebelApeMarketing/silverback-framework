---
import Button from './Button.astro';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "Service Areas",
  subtext = "Proudly serving communities throughout the region."
} = Astro.props;

const cities = [
  "Downtown",
  "Northside",
  "Southside",
  "Eastside",
  "Westside",
  "Midtown"
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <div class="grid grid-cols-2 md:grid-cols-3 gap-4 mb-8">
      {cities.map((city) => (
        <div class="bg-white border-2 border-gray-200 rounded-lg p-6 text-center hover:border-blue-600 hover:shadow-lg transition-all duration-300">
          <svg class="w-8 h-8 mx-auto mb-3 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
          </svg>
          <h3 class="text-lg font-bold">{city}</h3>
        </div>
      ))}
    </div>

    <div class="text-center">
      <p class="text-gray-600 mb-6">Don't see your area listed? Give us a call - we may still be able to help!</p>
      <Button href="#contact" variant="primary" size="lg">
        Contact Us
      </Button>
    </div>
  </div>
</section>
