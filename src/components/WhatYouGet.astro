---
interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "What You Get When You Choose Us",
  subtext = "We're committed to providing exceptional value and service to every customer."
} = Astro.props;

const benefits = [
  "Comprehensive service from start to finish",
  "Expert guidance and consultation",
  "High-quality materials and workmanship",
  "Detailed project documentation",
  "Transparent communication throughout",
  "Clean and professional job site",
  "Follow-up support after completion",
  "Warranty protection on all work"
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Checklist -->
      <div>
        <div class="space-y-4">
          {benefits.map((benefit) => (
            <div class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-600 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
              </svg>
              <span class="text-lg text-gray-700">{benefit}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Right Column - Image -->
      <div>
        <img
          src="https://placehold.co/600x500/e2e8f0/64748b?text=Service+Excellence"
          alt="What you get when you choose us"
          class="rounded-lg shadow-2xl w-full"
        />
      </div>
    </div>
  </div>
</section>
