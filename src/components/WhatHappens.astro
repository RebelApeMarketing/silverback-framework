---
import Button from './Button.astro';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "What Happens When You Work With Us",
  subtext = "Our proven process ensures you get the best service from start to finish."
} = Astro.props;

const steps = [
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`,
    title: "Contact Us",
    description: "Reach out via phone, form, or email. We respond quickly to all inquiries."
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-6 9l2 2 4-4" />
    </svg>`,
    title: "Schedule Service",
    description: "We'll schedule a convenient time that works for your busy schedule."
  },
  {
    icon: `<svg class="w-12 h-12" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    title: "Get Results",
    description: "Our expert team delivers exceptional results backed by our guarantee."
  }
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <div class="grid md:grid-cols-3 gap-8 mb-12">
      {steps.map((step, index) => (
        <div class="text-center">
          <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-blue-100 text-blue-600 mb-4">
            <Fragment set:html={step.icon} />
          </div>
          <div class="absolute top-0 right-0 -mt-2 -mr-2 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center font-bold text-sm">
            {index + 1}
          </div>
          <h3 class="text-xl md:text-2xl font-bold mb-3">{step.title}</h3>
          <p class="text-gray-600">{step.description}</p>
        </div>
      ))}
    </div>

    <div class="text-center">
      <Button href="#schedule" variant="primary" size="lg">
        Get Started Today
      </Button>
    </div>
  </div>
</section>
