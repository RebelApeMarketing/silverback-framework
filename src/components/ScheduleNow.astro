---
import Button from './Button.astro';
import { site } from '../config/site';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "Schedule Your Service Now",
  subtext = "Get started today with our simple scheduling process."
} = Astro.props;

const steps = [
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
    </svg>`,
    title: "Call or Email",
    description: "Reach out to our friendly team to discuss your needs and schedule a consultation."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
    </svg>`,
    title: "Pick Your Time",
    description: "Choose a convenient appointment time that works with your busy schedule."
  },
  {
    icon: `<svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
    </svg>`,
    title: "Get Service",
    description: "Our expert team arrives on time and delivers exceptional results."
  }
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12 items-center">
      <!-- Left Column - Image -->
      <div>
        <img
          src="https://placehold.co/600x500/e2e8f0/64748b?text=Expert+Service"
          alt="Professional service"
          class="rounded-lg shadow-2xl w-full"
        />
      </div>

      <!-- Right Column - Steps -->
      <div class="space-y-6">
        {steps.map((step) => (
          <div class="flex gap-4">
            <div class="flex-shrink-0 w-14 h-14 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
              <Fragment set:html={step.icon} />
            </div>
            <div>
              <h3 class="text-xl font-bold mb-2">{step.title}</h3>
              <p class="text-gray-600">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>

    <!-- Contact Box -->
    <div class="mt-12 bg-blue-50 border-2 border-blue-200 rounded-lg p-8">
      <div class="grid md:grid-cols-3 gap-6 items-center">
        <!-- Left - Image -->
        <div>
          <img
            src="https://placehold.co/200x200/3b82f6/ffffff?text=Contact+Us"
            alt="Contact representative"
            class="rounded-lg w-full"
          />
        </div>

        <!-- Right - Contact Info -->
        <div class="md:col-span-2">
          <h3 class="text-2xl md:text-3xl font-bold mb-4">Need Help Today?</h3>
          <p class="text-gray-600 mb-6">
            Our team is standing by to assist you. Give us a call or fill out our contact form.
          </p>

          <Button href={site.phoneHref} variant="primary" size="lg" class="mb-4">
            <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
              <path d="M6.62 10.79c1.44 2.83 3.76 5.14 6.59 6.59l2.2-2.2c.27-.27.67-.36 1.02-.24 1.12.37 2.33.57 3.57.57.55 0 1 .45 1 1V20c0 .55-.45 1-1 1-9.39 0-17-7.61-17-17 0-.55.45-1 1-1h3.5c.55 0 1 .45 1 1 0 1.25.2 2.45.57 3.57.11.35.03.74-.25 1.02l-2.2 2.2z" />
            </svg>
            Call {site.phone}
          </Button>

          <p class="text-sm text-gray-600">
            <strong>Hours:</strong> {site.hours}
          </p>
          <p class="text-sm text-gray-600 mt-2">
            We're here to help. If we miss your call, we'll call back within 15 minutes.
          </p>
        </div>
      </div>
    </div>
  </div>
</section>
