---
interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "The Difference",
  subtext = "See what sets us apart from the competition."
} = Astro.props;

const leftCards = [
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
    </svg>`,
    title: "Family-Owned Business",
    description: "We treat every customer like family and every project like it's our own home."
  },
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
    </svg>`,
    title: "Ongoing Training",
    description: "Our team stays current with the latest techniques and industry best practices."
  },
  {
    icon: `<svg class="w-10 h-10" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
    </svg>`,
    title: "Premium Materials",
    description: "We only use high-quality materials from trusted manufacturers."
  }
];

const rightItems = [
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "Licensed & Insured",
    description: "Full coverage for your complete protection"
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "Background-Checked Team",
    description: "Every team member is thoroughly vetted"
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "Locally Owned & Operated",
    description: "Supporting our community for years"
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "24/7 Emergency Service",
    description: "We're here when you need us most"
  },
  {
    icon: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
    </svg>`,
    title: "Satisfaction Guaranteed",
    description: "Your happiness is our top priority"
  }
];
---

<section class="py-16 md:py-24">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <div class="grid md:grid-cols-2 gap-12">
      <!-- Left Column - Stacked Cards -->
      <div class="space-y-6">
        {leftCards.map((card) => (
          <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 hover:shadow-lg transition-all duration-300">
            <div class="flex gap-4">
              <div class="flex-shrink-0 w-16 h-16 rounded-lg bg-blue-100 text-blue-600 flex items-center justify-center">
                <Fragment set:html={card.icon} />
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2">{card.title}</h3>
                <p class="text-gray-600">{card.description}</p>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Right Column - Headline, Subhead, Bullet List -->
      <div>
        <h3 class="text-2xl md:text-3xl font-bold mb-4">Why Customers Trust Us</h3>
        <p class="text-lg text-gray-600 mb-8">We're committed to excellence in everything we do.</p>

        <div class="space-y-4">
          {rightItems.map((item) => (
            <div class="flex items-start gap-3">
              <div class="flex-shrink-0 w-8 h-8 rounded-full bg-green-100 text-green-600 flex items-center justify-center">
                <Fragment set:html={item.icon} />
              </div>
              <div>
                <h4 class="font-bold text-lg mb-1">{item.title}</h4>
                <p class="text-gray-600">{item.description}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>
  </div>
</section>
