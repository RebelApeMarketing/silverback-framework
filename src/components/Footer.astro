---
import { site } from '../config/site';

const currentYear = new Date().getFullYear();
---

<footer class="bg-slate-900 text-slate-300 px-6 py-12 md:py-16">
  <div class="max-w-6xl mx-auto">
    <div class="grid md:grid-cols-4 gap-8 mb-12">
      <!-- About -->
      <div>
        <h3 class="text-white font-semibold mb-4 text-lg">About</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/about" class="hover:text-white transition">About Us</a></li>
          <li><a href="/services" class="hover:text-white transition">Our Services</a></li>
          <li><a href="/testimonials" class="hover:text-white transition">Testimonials</a></li>
          <li><a href="/blog" class="hover:text-white transition">Blog</a></li>
        </ul>
      </div>

      <!-- Contact -->
      <div>
        <h3 class="text-white font-semibold mb-4 text-lg">Contact</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={site.phoneHref} class="hover:text-white transition font-semibold text-green-400">
              {site.phone}
            </a>
          </li>
          {site.email && (
            <li><a href={`mailto:${site.email}`} class="hover:text-white transition">{site.email}</a></li>
          )}
          {site.address && <li>{site.address}</li>}
          {(site.city || site.state || site.zip) && (
            <li>{site.city}{site.city && site.state ? ', ' : ''}{site.state} {site.zip}</li>
          )}
        </ul>
      </div>

      <!-- Hours -->
      <div>
        <h3 class="text-white font-semibold mb-4 text-lg">Hours</h3>
        <ul class="space-y-2 text-sm">
          {site.hours ? (
            <li>{site.hours}</li>
          ) : (
            <>
              <li>Monday - Friday: 8am - 6pm</li>
              <li>Saturday: 9am - 2pm</li>
              <li>Sunday: Closed</li>
            </>
          )}
          <li class="text-green-400 font-semibold pt-2">24/7 Emergency Service</li>
        </ul>
      </div>

      <!-- Legal -->
      <div>
        <h3 class="text-white font-semibold mb-4 text-lg">Legal</h3>
        <ul class="space-y-2 text-sm">
          <li><a href="/privacy-policy" class="hover:text-white transition">Privacy Policy</a></li>
          <li><a href="/terms-of-service" class="hover:text-white transition">Terms of Service</a></li>
          <li><a href="/sitemap" class="hover:text-white transition">Sitemap</a></li>
        </ul>

        {site.socials && (
          <div class="mt-6">
            <h4 class="text-white font-semibold mb-3 text-sm">Follow Us</h4>
            <div class="flex gap-3">
              {site.socials.facebook && (
                <a href={site.socials.facebook} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                  </svg>
                </a>
              )}
              {site.socials.instagram && (
                <a href={site.socials.instagram} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                  </svg>
                </a>
              )}
              {site.socials.linkedin && (
                <a href={site.socials.linkedin} target="_blank" rel="noopener noreferrer" class="hover:text-white transition">
                  <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                  </svg>
                </a>
              )}
            </div>
          </div>
        )}
      </div>
    </div>

    <!-- Divider -->
    <div class="border-t border-slate-700 pt-8">
      <p class="text-sm text-center">
        &copy; {currentYear} {site.companyName}. All rights reserved. | Licensed & Insured | 100% Satisfaction Guaranteed
      </p>
    </div>
  </div>
</footer>