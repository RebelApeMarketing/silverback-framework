---
import Layout from "../layouts/BaseLayout.astro";
import Header from "../components/Header.astro";
import Hero from "../components/Hero.astro";
import WhatHappens from "../components/WhatHappens.astro";
import HowDoIKnow from "../components/HowDoIKnow.astro";
import Features from "../components/Features.astro";
import WhatYouGet from "../components/WhatYouGet.astro";
import TheDifference from "../components/TheDifference.astro";
import ScheduleNow from "../components/ScheduleNow.astro";
import ServiceAreas from "../components/ServiceAreas.astro";
import Certifications from "../components/Certifications.astro";
import SocialProof from "../components/SocialProof.astro";
import Faq from "../components/Faq.astro";
import ScheduleForm from "../components/ScheduleForm.astro";
import Cta from "../components/Cta.astro";
import Footer from "../components/Footer.astro";
---

<Layout title="Professional Services You Can Trust">
  <Header />

  <!-- Hero Section -->
  <Hero
    headline="Your Trusted Partner for Professional Services"
    subhead="Get expert help when you need it most."
  />

  <!-- What Happens Section -->
  <section class="bg-white">
    <WhatHappens />
  </section>

  <!-- How Do I Know Section -->
  <section class="bg-gray-50">
    <HowDoIKnow />
  </section>

  <!-- Features/Benefits Section -->
  <section class="bg-white">
    <Features />
  </section>

  <!-- What You Get Section -->
  <section class="bg-gray-50">
    <WhatYouGet />
  </section>

  <!-- The Difference Section -->
  <section class="bg-white">
    <TheDifference />
  </section>

  <!-- Schedule Now Section -->
  <section class="bg-gray-50">
    <ScheduleNow />
  </section>

  <!-- Service Areas Section -->
  <section class="bg-white">
    <ServiceAreas />
  </section>

  <!-- Certifications Section -->
  <section class="bg-gray-50">
    <Certifications />
  </section>

  <!-- Social Proof / Testimonials Section -->
  <section class="bg-white">
    <SocialProof />
  </section>

  <!-- FAQ Section -->
  <section class="bg-gray-50">
    <Faq />
  </section>

  <!-- Schedule Form Section -->
  <section class="bg-white">
    <ScheduleForm />
  </section>

  <!-- CTA Section -->
  <Cta />

  <!-- Footer -->
  <Footer />
</Layout>