---
import Button from './Button.astro';

interface Props {
  headline?: string;
  subtext?: string;
}

const {
  headline = "What Our Customers Say",
  subtext = "Don't just take our word for it - hear from our satisfied customers."
} = Astro.props;

const testimonials = [
  {
    rating: 5,
    text: "Excellent service from start to finish. The team was professional, courteous, and did an outstanding job. Highly recommend!",
    name: "John D."
  },
  {
    rating: 5,
    text: "I was impressed with their attention to detail and commitment to quality. They exceeded my expectations in every way.",
    name: "Sarah M."
  },
  {
    rating: 5,
    text: "Fast, efficient, and affordable. They made the entire process easy and stress-free. Will definitely use them again!",
    name: "Michael R."
  },
  {
    rating: 5,
    text: "Professional team that truly cares about their customers. The results speak for themselves - absolutely fantastic!",
    name: "Lisa K."
  },
  {
    rating: 5,
    text: "Best decision I made was calling them. Great communication, fair pricing, and top-notch work. Five stars!",
    name: "David B."
  },
  {
    rating: 5,
    text: "From the initial consultation to project completion, everything was handled perfectly. Could not be happier!",
    name: "Jennifer L."
  }
];

const stats = [
  { number: "15+", label: "Years in Business" },
  { number: "5,000+", label: "Projects Completed" },
  { number: "A+", label: "BBB Rating" },
  { number: "4.9", label: "Average Rating" },
  { number: "100%", label: "Satisfaction Rate" }
];
---

<section class="py-16 md:py-24" id="reviews">
  <div class="max-w-6xl mx-auto px-6">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold mb-4">{headline}</h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-2xl mx-auto">{subtext}</p>
    </div>

    <!-- Testimonials Grid -->
    <div class="grid md:grid-cols-3 gap-6 mb-16">
      {testimonials.map((testimonial) => (
        <div class="bg-white border-2 border-gray-200 rounded-lg p-6 hover:border-blue-600 hover:shadow-lg transition-all duration-300">
          <div class="flex gap-1 mb-4">
            {[...Array(testimonial.rating)].map(() => (
              <svg class="w-5 h-5 text-yellow-400" fill="currentColor" viewBox="0 0 20 20">
                <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
              </svg>
            ))}
          </div>
          <p class="text-gray-700 mb-4 italic">"{testimonial.text}"</p>
          <p class="text-gray-900 font-semibold">â€” {testimonial.name}</p>
        </div>
      ))}
    </div>

    <!-- Stats -->
    <div class="grid grid-cols-2 md:grid-cols-5 gap-6 mb-12">
      {stats.map((stat) => (
        <div class="text-center bg-blue-50 rounded-lg p-6">
          <div class="text-4xl md:text-5xl font-bold text-blue-600 mb-2">{stat.number}</div>
          <div class="text-sm md:text-base text-gray-600 font-semibold">{stat.label}</div>
        </div>
      ))}
    </div>

    <!-- CTA -->
    <div class="text-center">
      <Button href="#schedule" variant="primary" size="lg">
        Join Our Happy Customers
      </Button>
    </div>
  </div>
</section>
